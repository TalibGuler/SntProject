@{
    ViewData["Title"] = "Home Page";
}
@model SntProject.Models.MetaData;


<div class="text-center">
	<h1 class="display-4">@Model._1Information</h1>

	<div id="chartContainer" style="height: 370px; width: 100%;"></div>

	<p>Symbol: @Model._2Symbol</p>
	<p>Last Refreshed: @Model._3LastRefreshed</p>
	<p>Interval: @Model._4Interval</p>
	<p>Output Size: @Model._5OutputSize</p>
	<p>Time Zone: @Model._6TimeZone</p>

	<script>
		window.onload = function () {

			var chart = new CanvasJS.Chart("chartContainer", {
				theme: "light2", // "light1", "light2", "dark1", "dark2"
				animationEnabled: true,
				zoomEnabled: true,
				title: {
					text: "Stock"
				},
				data: [{
					type: "area",
					dataPoints: @Html.Raw(ViewBag.DataPoints)
						}]
			});

			chart.render();

		}
	</script>
	<script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>

</div>
